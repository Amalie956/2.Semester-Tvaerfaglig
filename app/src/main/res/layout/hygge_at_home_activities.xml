<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HyggeAtHomeActivities">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktivitet 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="584dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hotchocolatePictureID"
                android:layout_width="193dp"
                android:layout_height="145dp"
                app:srcCompat="@drawable/hotchocolate" />

            <ImageView
                android:id="@+id/socksPictureID"
                android:layout_width="120dp"
                android:layout_height="153dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/hyggesocks" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/twoFemalesPictureID"
                android:layout_width="339dp"
                android:layout_height="156dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/twofemales" />

            <ImageView
                android:id="@+id/bathubPictureID"
                android:layout_width="358dp"
                android:layout_height="156dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bathtub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lightingPictureID"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/hyggelighting" />

            <ImageView
                android:id="@+id/sofaPictureID"
                android:layout_width="429dp"
                android:layout_height="169dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/greensofa" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>